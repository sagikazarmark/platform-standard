#!/bin/bash

docker-compose run php bin/console oro:install --organization-name Oro --user-name admin --user-email admin@example.com --user-firstname John --user-lastname Doe --user-password admin --sample-data n --application-url http://local.promo.sfntc.de --force
docker-compose run php bin/console doctrine:database:create --env test
docker-compose run php bin/console oro:install --env test --organization-name Oro --user-name admin --user-email admin@example.com --user-firstname John --user-lastname Doe --user-password admin --sample-data n --application-url http://localhost --force
docker-compose run php bin/console doctrine:fixture:load --no-debug --append --no-interaction --env=test --fixtures ./vendor/oro/platform/src/Oro/Bundle/TestFrameworkBundle/Fixtures
docker-compose run php bin/console doctrine:schema:update --force --env test
